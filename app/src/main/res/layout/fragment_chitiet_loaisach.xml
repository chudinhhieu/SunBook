<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/bg_chitiet"
        android:layout_width="wrap_content"
        android:layout_height="275dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-100dp"
        android:src="@drawable/bg_chitiet" />
    <ImageView
        android:layout_margin="10dp"
        android:layout_alignParentTop="true"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/back"/>
    <ImageView
        android:id="@+id/avatar_chitiet_ls"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/bg_chitiet"
        android:layout_marginTop="-75dp"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/avatar_chitiet_ls"/>
    <TextView
        android:id="@+id/tv_ctls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/mali"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:text="THÔNG TIN LOẠI SÁCH"
        android:layout_below="@id/avatar_chitiet_ls"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        />
    <RelativeLayout
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/ct1"
        android:layout_marginTop="10dp"
        android:layout_below="@id/tv_ctls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/id"/>
        <TextView
            android:id="@+id/tv1"
            android:layout_toRightOf="@id/img1"
            android:layout_width="wrap_content"
            android:text="Mã loại sách"
            android:fontFamily="@font/mali"
            android:textColor="@color/black"
            android:textSize="17dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv2"
            android:layout_toRightOf="@id/img1"
            android:layout_below="@id/tv1"
            android:layout_width="wrap_content"
            android:text="1"
            android:fontFamily="@font/mali"
            android:textColor="@color/xam"
            android:textSize="16dp"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/ct2"
        android:layout_marginTop="10dp"
        android:layout_below="@id/ct1"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/img_loaisach"/>
        <TextView
            android:id="@+id/tv2"
            android:layout_toRightOf="@id/img2"
            android:layout_width="wrap_content"
            android:text="Tên loại sách"
            android:fontFamily="@font/mali"
            android:textColor="@color/black"
            android:textSize="17dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv3"
            android:layout_toRightOf="@id/img2"
            android:layout_below="@id/tv2"
            android:layout_width="wrap_content"
            android:text="Công nghệ thông tin"
            android:fontFamily="@font/mali"
            android:textColor="@color/xam"
            android:textSize="16dp"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <Button
        android:id="@+id/btn_sua_ls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ct2"
        android:layout_alignParentStart="true"
        android:text="Sửa"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/mali"
        android:textColor="@color/white"
        android:backgroundTint="@color/main"/>
    <Button
        android:id="@+id/btn_xoa_ls"
        android:layout_below="@id/ct2"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Xóa"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/mali"
        android:textColor="@color/white"
        android:backgroundTint="@color/red"/>
</RelativeLayout>