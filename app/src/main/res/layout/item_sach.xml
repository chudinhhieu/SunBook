<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/gray"
    android:layout_marginBottom="10dp">
    <RelativeLayout
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_sach"
            android:layout_width="60dp"
            android:layout_centerVertical="true"
            android:layout_height="60dp"
            android:src="@drawable/item_sach"/>
        <TextView
            android:id="@+id/tv_tensach"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/black"
            android:fontFamily="@font/mali"
            android:textSize="16sp"
            android:text="Lập trình Android"
            android:layout_toRightOf="@id/img_sach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_giathue"
            android:layout_marginLeft="10dp"
            android:textColor="@color/red"
            android:fontFamily="@font/mali"
            android:layout_below="@id/tv_tensach"
            android:textSize="16sp"
            android:text="30000"
            android:layout_marginRight="2dp"
            android:layout_toRightOf="@id/img_sach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_vnd"
            android:layout_marginRight="10dp"
            android:textColor="@color/red"
            android:fontFamily="@font/mali"
            android:layout_below="@id/tv_tensach"
            android:textSize="16sp"
            android:text="vnđ"
            android:layout_toRightOf="@id/tv_giathue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_chitiet_sach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@color/main"
            android:fontFamily="@font/mali"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="Chi tiết"
            android:textColor="@color/white"
            android:textSize="16sp" />
        />
    </RelativeLayout>
</androidx.cardview.widget.CardView>