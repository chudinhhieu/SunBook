<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    tools:context=".LoginActivity">
    <ImageView
        android:layout_gravity="center_horizontal"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/sun_book"/>
    <TextView
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:fontFamily="@font/mali"
        android:textColor="@color/main"
        android:text="ĐỔI MẬT KHẨU"/>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/edL_matKhauCu"
        android:layout_marginTop="10dp"
        style="@style/LoginTextInputLayoutStyle"
        android:layout_width="match_parent"
        android:fontFamily="@font/mali"
        android:layout_height="wrap_content"
        app:startIconDrawable="@drawable/ic_baseline_lock_24"
        app:endIconMode="password_toggle">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ed_matKhauCu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="Mật khẩu cũ"
            android:fontFamily="@font/mali"
            android:textSize="18dp"
            android:maxLength="20"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/edL_matKhauMoi"
        android:layout_marginTop="10dp"
        style="@style/LoginTextInputLayoutStyle"
        android:fontFamily="@font/mali"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:startIconDrawable="@drawable/ic_baseline_lock_24"
        app:endIconMode="password_toggle">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ed_matKhauMoi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="Mật khẩu mới"
            android:textSize="18dp"
            android:fontFamily="@font/mali"
            android:maxLength="20"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/edL_matKhauMoi2"
        android:layout_marginTop="10dp"
        style="@style/LoginTextInputLayoutStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/mali"
        app:startIconDrawable="@drawable/ic_baseline_lock_24"
        app:endIconMode="password_toggle">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ed_matKhauMoi2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:fontFamily="@font/mali"
            android:hint="Nhập lại mật khẩu mới"
            android:textSize="18dp"
            android:maxLength="20"/>
    </com.google.android.material.textfield.TextInputLayout>
    <Button
        android:id="@+id/btn_dmk"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="Xác nhận"
        android:fontFamily="@font/mali"
        android:backgroundTint="@color/main"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColor="@color/white"/>

</LinearLayout>