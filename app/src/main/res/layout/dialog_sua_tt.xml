<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:padding="15dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_them_tt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/mali"
        android:text="Sửa thủ thư"
        android:textColor="@color/black"
        android:textSize="24dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/edL_them_hoTenTT_sua"
        android:layout_marginBottom="10dp"
        style="@style/LoginTextInputLayoutStyle"
        android:layout_below="@+id/tv_them_tt"
        android:fontFamily="@font/mali"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ed_them_hoTenTTs_sua"
            android:hint="Họ và tên"
            android:fontFamily="@font/mali"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/edL_them_matkhau_sua"
        android:layout_marginBottom="10dp"
        style="@style/LoginTextInputLayoutStyle"
        android:layout_below="@+id/edL_them_hoTenTT_sua"
        android:fontFamily="@font/mali"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ed_them_matkhau_sua"
            android:hint="Mật khẩu"
            android:fontFamily="@font/mali"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>
    <Button
        android:id="@+id/btn_them_tt"
        android:text="Sửa"
        android:fontFamily="@font/mali"
        android:textColor="@color/white"
        android:backgroundTint="@color/main"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/edL_them_matkhau_sua"
        android:layout_width="120dp"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btn_huy_tt"
        android:text="Hủy"
        android:textColor="@color/white"
        android:fontFamily="@font/mali"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/edL_them_matkhau_sua"
        android:backgroundTint="@color/red"
        android:layout_width="120dp"
        android:layout_height="wrap_content"/>
</RelativeLayout>