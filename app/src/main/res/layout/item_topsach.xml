<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/gray"
    android:layout_marginBottom="10dp">
    <RelativeLayout
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/top"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:fontFamily="@font/mali"
            android:gravity="center"
            android:textColor="@color/main"
            android:text="1"
            android:textSize="30sp" />
        <ImageView
            android:id="@+id/img_sach"
            android:layout_width="60dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/top"
            android:layout_centerVertical="true"
            android:layout_height="60dp"
            android:src="@drawable/item_sach"/>
        <TextView
            android:id="@+id/tv_tensach_top"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/black"
            android:fontFamily="@font/mali"
            android:textSize="16sp"
            android:text="Lập trình Android"
            android:layout_toRightOf="@id/img_sach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv001"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:fontFamily="@font/mali"
            android:layout_below="@id/tv_tensach_top"
            android:textSize="16sp"
            android:text="Số lần mượn:"
            android:layout_marginRight="2dp"
            android:layout_toRightOf="@id/img_sach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_soluong"
            android:layout_marginRight="10dp"
            android:textColor="@color/red"
            android:fontFamily="@font/mali"
            android:layout_below="@id/tv_tensach_top"
            android:textSize="16sp"
            android:text="1"
            android:layout_toRightOf="@id/tv001"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>