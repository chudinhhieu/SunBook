<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:padding="15dp"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_them_sach"
        android:layout_width="wrap_content"
        android:fontFamily="@font/mali"
        android:textColor="@color/black"
        android:layout_marginBottom="10dp"
        android:textSize="24dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Thêm sách"/>
    <TextView
        android:id="@+id/tv01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên loại sách"
        android:fontFamily="@font/mali"
        android:textColor="@color/black"
        android:layout_below="@id/tv_them_sach"/>
    <Spinner
        android:id="@+id/spn_loaisach"
        android:layout_below="@id/tv01"
        android:layout_width="match_parent"
        android:background="@drawable/bgr_spn"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"/>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/edL_them_tensach"
        android:layout_marginBottom="10dp"
        style="@style/LoginTextInputLayoutStyle"
        android:layout_below="@+id/spn_loaisach"
        android:fontFamily="@font/mali"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ed_them_tensach"
            android:hint="Tên sách"
            android:fontFamily="@font/mali"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/edL_them_giathue"
        android:layout_marginBottom="10dp"
        style="@style/LoginTextInputLayoutStyle"
        android:layout_below="@+id/edL_them_tensach"
        android:fontFamily="@font/mali"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ed_them_giathue"
            android:hint="Giá thuê"
            android:inputType="number"
            android:fontFamily="@font/mali"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>
    <Button
        android:id="@+id/btn_them_sach"
        android:text="Thêm"
        android:fontFamily="@font/mali"
        android:textColor="@color/white"
        android:backgroundTint="@color/main"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/edL_them_giathue"
        android:layout_width="120dp"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btn_huy_sach"
        android:text="Hủy"
        android:textColor="@color/white"
        android:fontFamily="@font/mali"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/edL_them_giathue"
        android:backgroundTint="@color/red"
        android:layout_width="120dp"
        android:layout_height="wrap_content"/>
</RelativeLayout>